<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_enabled="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2dp"
                android:color="#ef5350"/>
            <corners
                android:radius="7dp" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="#f44336"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"/>
            <corners
                android:radius="7dp" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2dp"
                android:color="#ef9a9a"/>
            <corners
                android:radius="7dp" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="#ef9a9a"/>
        </shape>
    </item>
</selector>
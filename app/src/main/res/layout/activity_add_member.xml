<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dp.patidatsamajdirectoryapp.activities.AddMember"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:background="@color/colorToolbar"
            android:layout_height="70dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:id="@+id/back"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:text="Add Member Form"
                    android:paddingLeft="4dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:layout_margin="16dp"
                android:id="@+id/name"
                android:paddingLeft="8dp"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:hint="Name"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/surname"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                android:hint="Surname"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/father_name"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                android:hint="Father's Name"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gotra"
                android:layout_margin="16dp"
                android:paddingLeft="8dp"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:hint="Gotra"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:id="@+id/state"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:id="@+id/district"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/tehsil"
                android:background="@android:color/transparent"
                android:hint="Tehsil"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/city"
                android:background="@android:color/transparent"
                android:hint="City"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:id="@+id/primaryAddress"
                android:textSize="25sp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:hint="Primary Address"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/secondaryAddress"
                android:background="@android:color/transparent"
                android:hint="Secondary Address"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/occupation"
                android:background="@android:color/transparent"
                android:hint="Occupation"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:id="@+id/blood_group"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:inputType="date"
                android:id="@+id/date_of_birth"
                android:background="@android:color/transparent"
                android:hint="DOB"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/marital_status"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_margin="16dp"
                    android:text="Single"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="16dp"
                    android:text="Married"/>

            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/doa"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                android:inputType="date"
                android:hint="Date Of Anniversary"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/boys"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                android:inputType="number"
                android:hint="No. of Boys"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/girls"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                android:inputType="number"
                android:hint="No. of Girls"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/gender"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_margin="16dp"
                    android:text="Male"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="16dp"
                    android:text="Female"/>

            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mobile"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                android:inputType="phone"
                android:hint="Mobile"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:hint="Email"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/whatsapp"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:hint="Whatsapp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/landline"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:hint="Landline"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_margin="16dp"
                android:textSize="25sp"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:hint="Password"/>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:layout_margin="8dp"
            android:text="Add Member"
            android:id="@+id/submit"
            android:textColor="#ffffff"/>

    </LinearLayout>

</ScrollView>



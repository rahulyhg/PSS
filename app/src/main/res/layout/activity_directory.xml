<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_directory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dp.patidatsamajdirectoryapp.activities.Directory">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Users List/ Search User"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginBottom="60dp"
        android:id="@+id/header"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/header"

        android:background="@android:color/transparent"
        android:layout_margin="8dp"
        android:id="@+id/state_holder"
        android:layout_gravity="center"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:id="@+id/state"
            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_holder"
        app:cardCornerRadius="20dp"
        android:id="@+id/city_holder"
        android:background="@android:color/transparent"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/city"
            android:layout_margin="16dp"
            />

    </android.support.v7.widget.CardView>


<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/city_holder"
    android:id="@+id/search"
    android:background="@drawable/red_button"
    android:text="Search"
    android:textColor="#ffffff"
    android:layout_marginTop="36dp"/>



</RelativeLayout>
